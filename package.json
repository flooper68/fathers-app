{
  "name": "fathers-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=14.16.x <15"
  },
  "scripts": {
    "start:dev": "concurrently --names 'CLIENT,SERVER' -c 'red.bold,blue.bold' \"yarn start:dev:client\" \"yarn start:dev:server\"",
    "start:dev:client": "craco start",
    "start:dev:server": "nodemon",
    "build": "yarn build:client && yarn build:server",
    "build:client": "craco build",
    "build:server": "tsc --project tsconfig.server.json",
    "test": "yarn test:client && yarn test:server",
    "test:client": "craco test --watchAll=false",
    "test:client:watch": "craco test ",
    "test:server": "jest /src/server",
    "test:server:watch": "jest /src/server --watch",
    "prepare": "husky install",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx --quiet",
    "pretty": "prettier --write src"
  },
  "dependencies": {
    "@apollo/client": "^3.3.13",
    "@types/lodash": "^4.14.170",
    "@types/react-router-dom": "^5.1.7",
    "@woocommerce/woocommerce-rest-api": "^1.0.1",
    "antd": "^4.15.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongoose": "^5.12.3",
    "query-string": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "socket.io": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^6.1.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.15",
    "@types/mongoose": "^5.10.4",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "^5.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "http-proxy-middleware": "^1.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "react-scripts": "4.0.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{j,t}s?(x)|e2e/cypress/**/*.{j,t}s?(x)": [
      "prettier --write",
      "yarn lint"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "displayName": "Client tests",
    "testMatch": [
      "**/client/**/*.test.*"
    ]
  }
}
